<div>
  <h1 class="font-bold text-4xl">CATEGORIES</h1>
  <ul>
    <% @categories.each do |category| %>
      <li>
        <%= link_to category_path(category) do %>
          <img src="<%= category.icon %>">  <%= category.name %> Total: $<%= category.total %>
        <% end %>
      </li>
    <% end %>
  </ul>
  <%= link_to 'Add a new category', new_category_path %>

</div>
