<%= form_for(resource, as: resource_name, url: user_registration_path, html: { id: 'signup-form'}) do |f| %>
  <div class="flex flex-grow px-2 py-3 h-16 items-center from-main-500 to-main-700 bg-gradient-to-br text-font-100">
    <%= link_to welcome_path, class: 'w-2/12 text-xl' do %>
      <i class="fa-solid fa-arrow-left"></i>
    <% end %>
    <span class="w-8/12 text-center font-semibold">REGISTER</span>
    <button class="w-2/12">Sign up</button>
  </div>

  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="flex flex-col mt-6">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'Email' %>
    <%= f.text_field :name, placeholder: 'Name' %>
    <%= f.password_field :password, autocomplete: "new-password", placeholder: 'Password' %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: 'Password confirmation' %>
  </div>
<% end %>

<div class="text-center mt-10 text-font-300">
  <%= render "devise/shared/links" %>
</div>
