<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }, data: { turbo: false}) do |f| %>
  <div class="flex flex-grow px-2 py-3 h-16 items-center from-main-500 to-main-700 bg-gradient-to-br text-font-100">
    <%= link_to new_user_session_path, class: 'w-2/12 text-xl' do %>
      <i class="fa-solid fa-arrow-left"></i>
    <% end %>
    <span class="w-8/12 text-center font-semibold">PASSWORD RECOVERY</span>
  </div>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="flex flex-col mt-6">

    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'Email' %>

    <%= f.submit "Send me reset password instructions", class: 'px-3 py-2 mt-3 bg-main-500 w-10/12 text-font-100 font-semibold self-center'  %>
  </div>
<% end %>

<div class="text-center mt-10 text-font-300">
  <%= render "devise/shared/links" %>
</div>
