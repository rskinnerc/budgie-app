<div>
  <%= link_to '<', category_path(@category) %>
  <h1 class="font-bold text-4xl">NEW OPERATION</h1>
  <%= form_with url: category_operations_path(@category), scope: :operation, id: 'new_operation_form' do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>

    <%= f.label :amount %>
    <%= f.number_field :amount %>

    <h2>Categories</h2>
    <%= f.collection_check_boxes :groups, @groups, :id, :name, include_hidden: false do |b| %>
      <%= b.label { b.check_box(:"checked" => b.value == @category.id, :"value" => b.value) + ' ' + b.text } %>
    <% end %>
    <%= f.submit 'Create Operation' %>
  <% end %>
</div>
